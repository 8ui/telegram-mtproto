{
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "lcov"
  ],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "moduleNameMapper": {
    "^Action(.*)$": "<rootDir>/packages/telegram-mtproto/src/state/action$1",
    "^Util(.*)$": "<rootDir>/packages/telegram-mtproto/src/util$1"
  },
  "roots" : [
    "<rootDir>/packages/telegram-mtproto/src/",
    "<rootDir>/packages/telegram-mtproto/test/"
  ]
}