{
  "name": "mtproto-dev",
  "description": "Mtproto dev package",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest packages/telegram-mtproto/test/node.test.js",
    "test:esnext": "jest packages/telegram-mtproto/test/*.test.js",
    "test:task": "lerna run --scope telegram-mtproto test:task",
    "watch:main": "lerna run --parallel --scope telegram-mtproto watch:cjs",
    "flow": "pm2 start flow-mtproto.sh",
    "flow:status": "flow status",
    "flow:stop": "pm2 stop flow-mtproto",
    "watch": "lerna run --parallel watch:cjs",
    "cleanup": "sh ./scripts/cleanup.sh",
    "remotedev": "node scripts/remotedev",
    "redux": "MOCK=true node scripts/redux"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-define": "^1.3.0",
    "documentation": "^5.3.5",
    "eslint": "^4.15.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-jest": "^21.6.1",
    "eslint-plugin-jsdoc": "^3.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.66.0",
    "flow-typed": "^2.2.3",
    "fs-extra": "^4.0.2",
    "jest": "^21.1.0",
    "jest-environment-node-debug": "^2.0.0",
    "jsinspect": "^0.12.7",
    "lerna": "^2.7.0",
    "pm2": "^2.9.1",
    "remotedev-server": "^0.2.4"
  },
  "dependencies": {},
  "version": "0.0.5",
  "quokka": {
    "babel": {
      "env": "commonjs"
    }
  }
